
<div class="container">

<h1> All services available at the moment </h1>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<% @services.each do |service| %>
    <h2><%= service.title %></h2>
    <h3>category: <%= service.category.name %></h2>
    <p>description: <%= service.description %></p>
    <p>location: <%= service.location %>
    <p><%= service.price_per_hour %> dollars / hour </p>
    <div>
      <%= cl_image_tag service.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <p><%= link_to "check it out", service_path(service.id) %></p>

<!-- pundit below -->
    <% if policy(service).edit? %>
      <%= link_to "Update", edit_service_path(service) %>
    <% end %>

    <% if policy(service).destroy? %>
    <%= link_to 'Delete service', service, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<!-- pundit above -->

<% end  %>

<% if policy(Service).create? %>
  <%= link_to "Create a new service", new_service_path %>
<% end %>

</div>


