<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
       <h3>Leave a review for <%= @booking.service.user.username %></h3>
       <p>You book <%= @booking.service.user.username %> on  <%= @booking.start_time.strftime("%A, %b %d") %> for <%= @booking.duration %> hours </p>
      <div class="card p-3">
        <%= simple_form_for([@booking, @review]) do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :rating %>
          <%= f.submit class: "form-submit-button"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
