<h1 class="m-4"> All services available at the moment</h1>

<div class="main-container">

  <div class="cards-index mx-4">
      <% @services.each do |service| %>
        <%= link_to service_path(service.id) do %>
          <div class="card-service">
            <%= cl_image_tag service.photo, height: 300, width: 400, crop: :fill %>
            <div class="card-service-infos">
              <div>
                <h2><%= service.title %></h2>
                <p><%= service.description %></p>
              </div>
              <h2 class="card-service-pricing">$<%= service.price_per_hour %></h2>
              <%= cl_image_tag service.user.avatar, class: "avatar"%>
            </div>
          </div>
        <% end %>



      <% end  %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>


